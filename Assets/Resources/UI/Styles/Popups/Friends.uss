}

.dialog-button.cancel-button:active {
    scale: 0.92;
    background-color: rgb(100, 90, 85);
}

.dialog-button.add-button {
    background-color: var(--color-accent-green);
    color: var(--color-text-primary);
}

.dialog-button.add-button:active {
    scale: 0.92;
    background-color: rgb(80, 210, 130);
}
