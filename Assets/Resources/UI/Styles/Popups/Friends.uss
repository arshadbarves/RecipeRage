/* Dialog Styles */










.dialog-input .unity-text-field__input {
    font-size: var(--font-size-xxl);
    color: var(--color-text-primary);
    -unity-text-align: middle-center;
    letter-spacing: 2px;
}





.dialog-button.cancel-button {
    background-color: var(--color-text-muted);
