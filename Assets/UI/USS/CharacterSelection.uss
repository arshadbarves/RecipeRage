/* Character Selection Screen Styles */
.character-selection-screen {
    width: 100%;
    height: 100%;
    background-color: rgb(20, 20, 30);
    flex-direction: column;
}

.character-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.3);
}

.back-button {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.3);
    color: white;
    padding: 10px 20px;
    border-radius: 8px;
}

.character-title {
    font-size: 32px;
    color: white;
}

.character-content {
    flex-grow: 1;
    flex-direction: row;
    padding: 20px;
}

.character-grid {
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
}

.character-slot {
    margin: 20px;
    padding: 20px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    border-width: 2px;
    border-color: rgba(255, 255, 255, 0.2);
    align-items: center;
    transition-property: border-color, scale;
    transition-duration: 0.2s;
}

.character-slot:hover {
    border-color: rgb(100, 150, 255);
    scale: 1.05;
}

.character-portrait {
    width: 120px;
    height: 120px;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 60px;
    margin-bottom: 15px;
}

.character-name {
    font-size: 18px;
    color: white;
    -unity-text-align: middle-center;
}

.character-details {
    min-width: 300px;
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 12px;
    margin-left: 20px;
}

.selected-character-name {
    font-size: 24px;
    color: rgb(100, 200, 255);
    margin-bottom: 15px;
}

.character-description {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 20px;
    white-space: normal;
}

.character-stats {
    flex-direction: column;
}

.stat {
    flex-direction: row;
    align-items: center;
    margin-bottom: 10px;
}

.stat-label {
    color: white;
    font-size: 14px;
    min-width: 80px;
}

.stat-bar {
    flex-grow: 1;
    height: 8px;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    margin-left: 10px;
}

.stat-fill {
    height: 100%;
    background-color: rgb(100, 200, 100);
    border-radius: 4px;
    width: 80%;
}

.character-footer {
    padding: 20px;
    justify-content: center;
    align-items: center;
}

.select-button {
    background-color: rgb(100, 150, 255);
    border-color: rgb(120, 170, 255);
    color: white;
    padding: 15px 40px;
    border-radius: 8px;
    font-size: 18px;
}
