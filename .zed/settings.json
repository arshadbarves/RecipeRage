// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.idea",
    "**/.vscode",
    "**/.vs",
    "**/*.meta",
    // exclude unity library folder and related files like csproj and sln, etc.
    "**/Library",
    "**/Temp",
    "**/obj",
    "**/Build",
    "**/Builds",
    "**/Logs",
    "**/UserSettings",
    "**/ProjectSettings",
    "**/StreamingAssets",
    "**/Packages",
    "**/Gizmos",
    "**/AssetStoreTools",
    "**/UIElementsSchema",
    "**/ProjectSettings.asset",
    "**/ProjectVersion.txt",
    "**/UnityPackageManager",
    "**/*.csproj",
    "**/*.sln",
    "**/*.suo",
    "**/*.user",
    "**/*.unityproj",
    "**/*.unitypackage",
    "**/*.unity",
    "**/*.mat",
    "**/*.meta",
    "**/*.pidb",
    "**/*.booproj",
    "**/*.svd",
    "**/*.pdb",
    "**/*.mdb",
    "**/*.opendb",
    "**/*.VC.db",
    "**/*.pidb",
    "**/*.pdb",
    "**/*.asset",
    "**/*.prefab",
    "**/*.scene"
  ]
}
